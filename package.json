		"@types/node": "^18.7.13",
		"@types/opener": "^1.4.0",
		"@types/twine-sugarcube": "^2.36.2",
		"@types/yauzl": "^2.10.0",
		"chalk": "^5.0.1",
		"create-serve": "^1.0.1",
